<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/line"
    >
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:gravity="top|center"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/loginBlue"
            android:orientation="horizontal">

            <Button
                android:id="@+id/flReturnBtn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/loginBlue"
                android:gravity="left"
                app:icon="?attr/actionModeCloseDrawable"
                />

            <TextView
                android:id="@+id/fltextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BMI Analyzer"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:background="@color/loginBlue"
                android:fontFamily="sans-serif"
                android:gravity="center"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/fltextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food List"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/loginBlue"
            android:fontFamily="sans-serif"
            android:gravity="bottom"
            android:layout_marginTop="30dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/flRecycler"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</FrameLayout>